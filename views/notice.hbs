<!DOCTYPE html>
<html lang="en">
<head>
    <base href="/">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="./css/notice.css">
    <title>Notice</title>
</head>
<body>
    <main>
        <section class="glass" id="main-sec">
            <section class="new-sec">
                <form action="" class="notice-creation" id="create-new">
                    <div class="wrapper1">
                        <p>Date (dd/mm/yy)</p><input type="text" id="date_new"
                        readonly
                        required
                        style="text-align: center;"
                        autocomplete="off">
                        <p>Notice ID</p><input type="text" id="notice_id_new"
                        readonly
                        required
                        style="text-align: center;"
                        autocomplete="off">
                        <input type="text" id="user_id_new" value={{id}} style="display: none;">
                    </div>
                    <div class="wrapper2">
                        <p>Notice</p><textarea name="" id="notice" 
                        placeholder="...write here"
                        required
                        rows="6"></textarea>
                    </div>
                    <button class="btn" form="create-new"><span>Submit</span></button>
                </form>
                <div class="notice-creation" id="edit-one">
                    <form action="" class="wrapper1" id="s-for-edit">
                        <p>Notice ID</p><input type="text" id="notice_id_edit"
                        placeholder="Input notice ID"
                        required
                        autocomplete="off">
                        <button class="btn" form="s-for-edit">Search</button>
                    </form>
                    <form action="" class="wrapper2" id="for-edit">
                        <p>Notice</p><textarea name="" id="edited_notice" 
                        placeholder="...change here"
                        required
                        rows="6"></textarea>
                        <button class="btnS" type="submit" form="for-edit">Submit</button>
                    </form>
                </div>
                <div class="notice-creation" id="remove-one">
                    <form action="" class="wrapper1" id="s-for-remove">
                        <p>Notice ID</p><input type="text" id="notice_id_remove"
                        placeholder="Input notice ID"
                        required
                        autocomplete="off">
                        <button class="btn" form="s-for-remove">Search</button>
                    </form>
                    <form action="" class="wrapper2" id="for-remove">
                        <p>Notice</p><textarea name="" id="removed_notice"
                        placeholder="...write here"
                        readonly
                        required
                        rows="6"></textarea>
                        <button class="btnS" form="for-remove">Remove</button>
                    </form>
                </div>
            </section>

            <section class="show-sec"></section>

        </section>
        <footer class="details">
            <span>ID :  <span id="id">{{id}}</span></span>
            <span>Tier :  <span id="tier">{{tier}}</span></span>
            <span>Username :  <span id="un">{{username}}</span></span>
        </footer>
    </main>
    <div class="new-notice" id="new">
            <span>Create</span>
    </div>
    <div class="edit-notice" id="edit">
            <span>Edit</span>
    </div>
    <div class="remove-notice" id="remove">
            <span>Remove</span>
    </div>
    <form class="logout-to-main" action="/main/{{id}}" method="get">
        <button class="btn-leave">To Main</button>
    </form>
    <form class="logout" action="/" method="get">
        <button class="btn-leave">LogOut</button>
    </form>

    <script src="/socket.io/socket.io.js"></script>
    <script src="./js/notice.js"></script>
</body>
</html>