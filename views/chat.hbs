<!DOCTYPE html>
<html lang="en">
<head>
    <base href="/">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/chat.css">
    <title>ChatBox</title>
</head>
<body>
    <main>
        <section class="chat-room">
            <div class="user-sec">
                <div class="host-room">
                    <h3>Room ID : <h3 id="room-name">{{room}}</h3></h3>
                    <h3>Host ID : {{host}}</h3>
                </div>
                <div class="user-list">
                    <h3>Users</h3>
                    <ul id="users"></ul>
                </div>
            </div>
            <div class="text-area">
                <div class="head">
                    <h3>User ID : <h3 id="user-id">{{id}}</h3></h3>
                    <h3>User Name : <h3 id="username">{{name}}</h3></h3>
                </div>
                <div class="text-sec">
                </div>
                <div class="msg_area">
                    <form id="msg-form">
                        <input
                            id="msg"
                            type="textarea"
                            placeholder="  ...write here"
                            required
                            autocomplete="off"
                        />
                        <button class="sbtn" form="msg-form"><span>Send</span></button>
                    </form>
                </div>
            </div>
        </section>
    </main>
    <form class="logout-to-main" action="/main/{{id}}" method="get">
        <button class="btn">To Main</button>
    </form>
    <form class="logout" action="/" method="get">
        <button class="btn">LogOut</button>
    </form>

    <script src="/socket.io/socket.io.js"></script>
    <script src="js/chat.js"></script>
</body>
</html>